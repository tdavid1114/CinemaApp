<UserControl x:Class="CinemaApp.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CinemaApp.Components"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <PasswordBox x:Name="passwordBox" PasswordChanged="PasswordBox_PasswordChanged" Background="#282828" Foreground="White" BorderBrush="#D3233D" FontSize="18" VerticalContentAlignment="Center" />
</UserControl>