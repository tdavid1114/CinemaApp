            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <!--Oldalcím-->
        <Label Grid.Row="0" Content="SELECT SEATS" Foreground="White" FontSize="34" FontWeight="ExtraBold" Margin="20 0 0 0" VerticalContentAlignment="Top" />
