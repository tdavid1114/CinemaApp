            <Rectangle Width="15" Height="15" Fill="White" />
            <Label Content="Selected seat" Foreground="White" Margin="10 0 60 0" VerticalContentAlignment="Center" />
            <Rectangle Width="15" Height="15" Fill="#D3233D" />
            <Label Content="Taken seat" Foreground="White" Margin="10 0 60 0" VerticalContentAlignment="Center" />
        </StackPanel>
